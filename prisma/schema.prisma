generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// ENUMS
// ============================================

enum SubscriptionProvider {
  LEMON_SQUEEZY
  APPLE   // App Store
  GOOGLE  // Play Store
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PAST_DUE
  PAUSED
}

enum SubscriptionEvent {
  CREATED
  RENEWED
  CANCELLED
  EXPIRED
  PLAN_CHANGED
  PAYMENT_FAILED
  REACTIVATED
}

enum Language {
  KO
  EN
  JP
  CN
  VN
}

enum ProblemType {
  VOCAB
  GRAMMAR
  READING
  LISTENING
}

enum ProblemSubType {
  KANJI_READING
  ORTHOGRAPHY
  WORD_FORMATION
  CONTEXT
  PARAPHRASE
  USAGE
  GRAMMAR_FORM
  GRAMMAR_ORDER
  TEXT_GRAMMAR
  SHORT_PASSAGE
  MID_PASSAGE
  LONG_PASSAGE
  INTEGRATED_PASSAGE
  THEMATIC_PASSAGE
  INFO_RETRIEVAL
  TASK_BASED
  POINT_COMPREHENSION
  SUMMARY
  QUICK_RESPONSE
  INTEGRATED_COMPREHENSION
}

// ============================================
// USER & AUTH
// ============================================

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  name         String?
  image        String?
  nativeLang   Language       @default(KO)
  targetLevel  Int            @default(1)
  isAdmin      Boolean        @default(false)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  
  // Relations
  reviewNotes   ReviewNote[]
  solveHistory  SolveHistory[]
  subscriptions Subscription[]
  
  // Quick access flag (computed from active subscriptions)
  isPro         Boolean        @default(false)
}

// ============================================
// SUBSCRIPTION SYSTEM
// ============================================

model Plan {
  id            String   @id @default(cuid())
  name          String   // "Pro Monthly", "Pro Yearly"
  code          String   @unique // "pro_monthly", "pro_yearly"
  price         Int      // 9900 (in smallest currency unit)
  currency      String   @default("KRW")
  interval      String   // "month", "year"
  intervalCount Int      @default(1)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  
  subscriptions Subscription[]
}

model Subscription {
  id                   String               @id @default(cuid())
  userId               String
  user                 User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  planId               String?
  plan                 Plan?                @relation(fields: [planId], references: [id])
  
  provider             SubscriptionProvider
  externalId           String               // Lemon Squeezy sub ID, Apple txn ID
  status               SubscriptionStatus   @default(ACTIVE)
  
  currentPeriodStart   DateTime
  currentPeriodEnd     DateTime
  cancelledAt          DateTime?
  
  purchaseToken        String?              @db.Text // Mobile receipt
  customerPortalUrl    String?
  
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  
  history              SubscriptionHistory[]
  
  @@index([userId])
  @@index([externalId])
}

model SubscriptionHistory {
  id             String              @id @default(cuid())
  subscriptionId String
  subscription   Subscription        @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  event          SubscriptionEvent
  previousStatus SubscriptionStatus?
  newStatus      SubscriptionStatus?
  metadata       Json?               // Extra event data
  
  createdAt      DateTime            @default(now())
  
  @@index([subscriptionId])
}

// ============================================
// PROBLEM & LEARNING SYSTEM
// ============================================

model Problem {
  id                  Int            @id @default(autoincrement())
  level               Int            // N1 ~ N5
  type                ProblemType
  subType             ProblemSubType
  
  // 1. 지문 및 문제는 원문(일본어)만 저장 (String으로 단순화 가능)
  content             String         @db.Text // 독해 지문 등 (번역 제외)
  question            String         @db.Text // 문제 문장 (번역 제외)
  options             Json           // ["선택지1", "선택지2", ...] - 배열 형태로 저장
  
  // 2. 해설과 단어만 다국어/상세 구조 유지
  // 예: { "ko": "해설 내용", "en": "Explanation..." }
  explanation         Json           
  // 예: [{ "word": "...", "mean": "...", "reading": "..." }]
  vocab               Json?          
  
  // 3. 모의고사 정보 추가 (단순 문자열 또는 별도 모델 연결)
  mockExamTag         String?        // 예: "2023_1회_실전", "자체제작_A형"
  
  answerIndex         Int
  audioUrl            String?
  imageUrl            String?
  
  // 관리용 데이터
  reasoning_for_level String?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt
  
  // 관계
  reviews             ReviewNote[]
  histories           SolveHistory[]
  
  // 만약 모의고사를 체계적으로 관리하고 싶다면 아래 MockExam 모델과 연결
  mockExam            MockExam?      @relation(fields: [mockExamId], references: [id])
  mockExamId          Int?
}

model MockExam {
  id        Int       @id @default(autoincrement())
  title     String    // 예: "2024년 제1회 JLPT 대비 모의고사"
  level     Int       @default(1) // N1 ~ N5
  problems  Problem[]
  createdAt DateTime  @default(now())
}

model ReviewNote {
  id        Int      @id @default(autoincrement())
  memo      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  problemId Int
  problem   Problem  @relation(fields: [problemId], references: [id])
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, problemId])
}

model SolveHistory {
  id         Int      @id @default(autoincrement())
  isCorrect  Boolean
  userAnswer String?
  timeTaken  Int?
  createdAt  DateTime @default(now())
  userId     String
  problemId  Int
  problem    Problem  @relation(fields: [problemId], references: [id])
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Grammar {
  id                Int      @id @default(autoincrement())
  grammar           String?
  romaji            String?
  meaning_simple    Json?
  levels            Json?
  createdAt         DateTime @default(now())
  updatedAt         DateTime
  confusing_factors Json?
  examples          Json?
  explanation       Json?
  hurigana          String?
}
